<AnchorPane id="streamers-pane" prefHeight="780.0" prefWidth="1074.0" styleClass="pc-root" stylesheets="@../styles/streamers.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StreamersController">

    <children>
        <!-- Título principal -->
        <Text id="title-streamers" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="pc-heading" text="Gestión de Streamers de twitch" wrappingWidth="692.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />

        <!-- Acciones -->
        <Text id="lbl-acciones" layoutX="21.0" layoutY="78.0" styleClass="pc-heading" text="Listado de Opciones" />
        <Separator layoutX="25.0" layoutY="48.0" prefWidth="200.0" />

        <!-- Buscador -->
        <Text id="lbl-buscador" layoutX="23.0" layoutY="164.0" styleClass="pc-heading" text="Buscador" />
        <Separator layoutX="21.0" layoutY="140.0" prefWidth="200.0" />

        <!-- Lista -->
        <Text id="lbl-lista" layoutX="21.0" layoutY="228.0" styleClass="pc-heading" text="Lista de canales" />
        <ListView id="list-streamers" fx:id="listStreamers" layoutX="21.0" layoutY="241.0" prefHeight="484.0" prefWidth="368.0" />

        <!-- Detalle -->
        <Text id="lbl-detalle" layoutX="423.0" layoutY="254.0" styleClass="pc-heading" text="Detalle de los Streamers" />
        <Separator layoutX="423.0" layoutY="273.0" prefWidth="200.0" />

        <GridPane id="detail-grid" layoutX="423.0" layoutY="285.0" prefHeight="105.0" prefWidth="429.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="219.0" minWidth="10.0" prefWidth="134.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="352.0" minWidth="10.0" prefWidth="295.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="82.0" minHeight="4.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="163.0" minHeight="3.0" prefHeight="43.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="202.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <!-- Etiquetas (negrita) -->
                <Label prefHeight="32.0" prefWidth="135.0" styleClass="pc-heading" text="Nombre" GridPane.rowIndex="0" />
                <Label prefHeight="40.0" prefWidth="130.0" styleClass="pc-heading" text="Está activo en Twitch" GridPane.rowIndex="1" />
                <Label prefHeight="31.0" prefWidth="133.0" styleClass="pc-heading" text="Fecha de registro" GridPane.rowIndex="2" />

                <!-- Valores (normal) -->
                <Label fx:id="lblNombre" prefHeight="30.0" prefWidth="259.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label fx:id="lblCreador" prefHeight="30.0" prefWidth="342.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label fx:id="lblFecha" prefHeight="30.0" prefWidth="363.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
        </GridPane>

        <!-- Estado (si lo usas) -->
        <Label id="status-db" fx:id="sms_conexiondb" layoutX="401.0" layoutY="676.0" prefHeight="43.0" prefWidth="342.0" />
          <TextField id="txt-buscar" fx:id="txtBuscar" layoutX="24.0" layoutY="179.0" onKeyReleased="#accionBuscar" prefHeight="25.0" prefWidth="373.0" />
          <Button id="btn-form-streamer" fx:id="btnFormStreamer" layoutX="22.0" layoutY="93.0" mnemonicParsing="false" onAction="#accionFormStreamer" styleClass="pc-btn" text="Acciones" />
      <Label alignment="CENTER" layoutX="25.0" layoutY="735.0" prefHeight="35.0" prefWidth="1034.0" text="© Desarrollado por Soujirito" />
    </children>
